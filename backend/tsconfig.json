{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": ["es2022" , "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
        "noEmit": true,
        "types": ["node"]
    },
    "include": ["src"]
}